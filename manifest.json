{
    "name": "Converse.js",
    "id": "conversejs",
    "packaging_format": 1,
    "description": {
        "en": "Web-based XMPP/Jabber chat client written in JavaScript ",
        "fr": "Client de chat XMPP/Jabber basé sur le Web écrit en JavaScript "
    },
     "version": "1.0~ynh4",
    "url": "http://conversejs.org/",
    "license": "MPL-2.0",
    "maintainer": {
        "name": "eric_G",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 4.0.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for converse.js",
                    "fr": "Choisissez un nom de domaine pour Cubiks converse.js"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Cubiks converse.js",
                    "fr": "Choisissez un chemin pour converse.js"
                },
                "example": "/conversejs",
                "default": "/conversejs"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public game?",
                    "fr": "Est-ce un jeu public ?"
                },
                "help": {
                        "en": "If enabled, converse.js will be accessible by people who doesn’t have an account. This can be changed later via the webadmin.",
                        "fr": "Si cette case est cochée, converse.js sera accessible aux personnes n’ayant pas de compte. Vous pourrez changer ceci plus tard via la webadmin."
                },
                "default": true
            }
        ]
    }
}
